<div>
    <div> <h1> <%= @post.title %> </h1> </div>
    <div> <%= @post.content %> </div>

    <% if @current_user_id != @post.user_id %>
        <% if like_exists(@post.id) %>
            <%= link_to "Unlike", like_path(:post_id => @post.id), method: :delete %>
        <% else %>
            <%= link_to "Like", likes_path(:post_id => @post.id), method: :post %>
        <% end %>
    <% else %>
        <%= link_to "Destroy", user_post_path(@post), method: :delete, data: {confirm: "Are you sure?" } %>
    <% end %>

    <h2> Comments </h2>
    <% if !@list_of_comments.empty? %>
        <div> <% @list_of_comments.each do |comment| %>
            <%= comment.content %>

            <% if (comment.user_id == @current_user_id) || (comment.user.id == @post.user.id) %>
                <%= link_to "Delete Comment", comment_path(comment), method: :delete, data: {confirm: "Are you sure?" } %>
            <% end %>
        <% end %> </div> 
    <% end %>

    <%= form_with model: @comment, url: comments_path, local: true do |f| %>
        <%= f.label :content, "Comment" %>
        <%= f.text_area :content %>

        <%= f.hidden_field :post_id, value: @post.id %>

        <%= f.submit "Comment" %>
    <% end %>
</div>